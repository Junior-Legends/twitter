{
	"name": "twitter-backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon src/server.js",
		"cm": "cz",
		"format": "prettier --write \"./**/*.{js,json}\"",
		"lint": "eslint \"./**/*.js\"",
		"lint:fix": "eslint \"./**/*.js\" --quiet --fix"
	},
	"keywords": [
		"twitter",
		"MERN"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "false2.4.3",
		"body-parser": "1.19.0",
		"dotenv": "8.2.0",
		"express": "4.17.1",
		"express-session": "1.17.1",
		"fastest-validator": "1.7.0",
		"helmet": "3.23.3",
		"lodash": "false4.17.20",
		"mongoose": "5.10.9",
		"morgan": "1.10.0"
	},
	"devDependencies": {
		"@commitlint/cli": "false11.0.0",
		"@commitlint/config-conventional": "9.1.1",
		"@commitlint/prompt": "false11.0.0",
		"commitizen": "false4.2.1",
		"commitlint": "9.1.0",
		"eslint": "7.2.0",
		"eslint-config-airbnb-base": "14.2.0",
		"eslint-config-prettier": "6.11.0",
